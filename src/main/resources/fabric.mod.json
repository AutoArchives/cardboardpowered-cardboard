{
  "schemaVersion": 1,
  "id": "cardboard",
  "version": "${version}",

  "name": "Cardboard",
  "description": "An implementation of the popular Spigot/Paper API for Fabric",
  "authors": [
    "Isaiah"
  ],
  "contact": {
    "homepage": "https://cardboardpowered.org/",
    "sources": "https://github.com/CardboardPowered/"
  },

  "license": "GPLv3",
  "icon": "assets/fabricbukkit/icon.png",
  "accessWidener" : "bukkitfabric.accesswidener",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.javazilla.bukkitfabric.BukkitFabricMod"
    ]
  },
  "mixins": [
    "bukkitfabric.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.0",
    "fabric-api": "*",
    "java": ">=16",
    "icommon": "*"
  },
  "suggests": {
    "flamingo": "*"
  },
  "custom": {
    "loom:injected_interfaces": {
      "net/minecraft/server/MinecraftServer": ["com/javazilla/bukkitfabric/interfaces/IMixinMinecraftServer"],
      "net/minecraft/class_1297": ["com/javazilla/bukkitfabric/interfaces/IMixinEntity"],
      "net/minecraft/class_3222": ["com/javazilla/bukkitfabric/interfaces/IMixinServerEntityPlayer"],
      "net/minecraft/class_1937": ["com/javazilla/bukkitfabric/interfaces/IMixinWorld"],
      "net/minecraft/class_3218": ["org/cardboardpowered/interfaces/IServerWorld"]
    }
  }

}
